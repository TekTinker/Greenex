<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Margin">
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:layout_marginBottom">60dp</item>
    </style>

    <style name="Button">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>


    <style name="EditTextField" parent="@style/Margin">

    </style>


    <style name="ButtonGreen" parent="@style/Button">
        <item name="android:background">#43A047</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="ButtonOrange" parent="@style/Button">
        <item name="android:background">#FF5722</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="ButtonRed" parent="@style/Button">
        <item name="android:background">#F00</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="ButtonSkyblue" parent="@style/Button">
        <item name="android:background">#42A5F5</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="TexRed" parent="@style/Margin">
        <item name="android:textColor">#F00</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TexLoginName">
        <item name="android:textColor">#0D47A1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextProduct">
        <item name="android:textColor">#37474F</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextProductDetails">
        <item name="android:textColor">#455A64</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TexLogin">
        <item name="android:textColor">#1565C0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
